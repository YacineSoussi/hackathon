{% extends './admin/admin.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

	<!-- General elements -->
	<h4 class="mb-4 text-lg font-semibold text-gray-600  text-center mt-5">
		Create customer
	</h4>

	<div class="px-6 py-3 mb-8 bg-white rounded-lg shadow-md max-w-2xl mx-auto ">
		{% for flashError in app.flashes('verify_email_error') %}
			<div class="alert alert-danger  mt-3 mb-3" role="alert">{{ flashError }}</div>
		{% endfor %}


		{{ form_start(registrationForm) }}
		<label class="block text-sm">
			{{ form_row(registrationForm.email, { 'attr': {'class': 'mb-2 mt-2 block w-full mt-1 text-sm focus:border-purple-400 focus:outline-none focus:shadow-outline-purple form-input'} }) }}
		</label>
		<label class="block text-sm">
			{{ form_row(registrationForm.company, { 'attr': {'class': 'mt-2 mb-4 block w-full mt-1 text-sm focus:border-purple-400 focus:outline-none focus:shadow-outline-purple form-input'} }) }}
		</label>
		<label class="block text-sm">
			{{ form_row(registrationForm.lastname, { 'attr': {'class': 'mt-2 mb-4 block w-full mt-1 text-sm focus:border-purple-400 focus:outline-none focus:shadow-outline-purple form-input'} }) }}
		</label>
		<label class="block text-sm">
			{{ form_row(registrationForm.firstname, { 'attr': {'class': 'mt-2 mb-4 block w-full mt-1 text-sm focus:border-purple-400 focus:outline-none focus:shadow-outline-purple form-input'} }) }}
		</label>
		<label class="block text-sm">
			{{ form_row(registrationForm.plainPassword, {
            label: 'Password',
            'attr': {'class': 'mt-2 mb-4 block w-full mt-1 text-sm focus:border-purple-400 focus:outline-none focus:shadow-outline-purple form-input'}
        }) }}
		</label>
		<label class="block text-sm">
			{{ form_row(registrationForm.imageFile, { label: 'Upload your logo', 'attr':{'class': 'bg-gray-100  mt-2'}})}}
		</label>
		<label class="block text-sm">
			{{ form_row(registrationForm.agreeTerms, {'attr':{'class': 'bg-red-500 mx-2 mt-4'}}) }}
		</label>
		<label class="block text-sm">
			{{ form_row(registrationForm.role, { label: 'Admin Role ', 'attr':{'class': 'bg-red-500 mx-2 mt-4'}}) }}
		</label>
		<button type="submit" class="w-full bkg-gradient-3  text-white font-bold text-lg hover:bg-gray-700 p-2 mt-8">Register</button>
		{{ form_end(registrationForm) }}

	</div>
{% endblock %}
